<br>
<div class="container">
  <div class="row">
    <h4 class="col-6 mx-auto">商品一覧</h4><br>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 mb-4">
        <div class="card">
         <% if item.image.present? %>
          <%= link_to item_path(item.id) do %>
           <%= image_tag item.image, width: 150, height: 100 %>
          <% end %>
         <% else %>
      　   <%= link_to item_path(item.id) do %>
      　    <%= image_tag 'no_image', width: 100, height: 100 %>
      　   <% end %>
         <% end %>
        <div class="card-body">
         <h5 class="card-title"><%= link_to item.name, item_path(item.id) %></h5>
          <p class="card-text">￥<%= item.price %></p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
