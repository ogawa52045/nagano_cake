<br>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="col-6 bg-light text-black">注文履歴一覧</div><br>
      <div class="table-group">
        <div class="col-12">
          <table class="table table-borderless">
            <thead class="thead-light">
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.created_at %></td>
                  <td><%= order.customer.name %></td>
                  <td><%= order.amount %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
